extends ../layout

block content
    h1 #{title}
    p
        a.button(href="/loans/create") Create New Loan
    p
        | Filters
        a(href="/loans") All
        |  |
        a(href="/loans?overdue=true") Overdue
        |  |
        a(href="/loans?checkedOut=true") Checked Out
    table
        thead
            tr
                th Book
                th Patron
                th Loaned on
                th Return by
                th Returned on
                th Action
        tbody
            each loan in loans
                tr
                    td
                        a(href="/book/"+loan.book_id) #{loan.Book.title}
                    td
                        a(href="/patron/"+loan.Patron.id) #{loan.Patron.first_name} #{loan.Patron.last_name}
                    td #{loan.loaned_on}
                    td #{loan.return_by}
                    td #{loan.returned_on}
                    td
                        a.button(href="return_book.html") Return Book