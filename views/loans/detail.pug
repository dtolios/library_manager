extends ../layout

block content
    h1 Patron: Return Book
    if errors
        include ../error.pug
    p
        strong Book Title:
        |  #{loan.Book.title}
    p
        strong Loaned By:
        |  #{loan.Patron.first_name} #{loan.Patron.last_name}
    p
        strong Loaned On:
        |  #{loan.loaned_on}
    p
        strong Return By:
        |  #{loan.return_by}
    form(action="/loans/" + loan.id, method="POST")
        input(type="hidden", name="_method", value="PUT")
        p
            label(for="returned_on") Returned on:
            input#returned_on(name="returned_on", type="text", value=returnedOn)
        p
            input(type="submit", value="Return Book")
