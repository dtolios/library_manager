extends ../layout

block content
    h1 #{title}
    p
        a.button(href="/books/new") Create New Book
    p
        | Filters
        a(href="/books") All
        |  |
        a(href="/books?overdue=true") Overdue
        |  |
        a(href="books?checkedOut=true") Checked Out
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year Released
        tbody
            each book in books
                tr
                    td
                        a(href="/books/"+book.id) #{book.title}
                    td #{book.author}
                    td #{book.genre}
                    td #{book.first_published}