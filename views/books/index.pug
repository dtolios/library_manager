extends ../layout

block content
    h1 #{title}
    p
        a.button(href="/books/create") Create New Book
    p
        | Filters
        a(href="/books") All
        |  |
        a(href="/books?filter=overdue") Overdue
        |  |
        a(href="books?filter=checked_out") Checked Out
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year Released
        tbody
            each book in books
                tr
                    td
                        a(href="/books/"+book.id) #{book.title}
                    td #{book.author}
                    td #{book.genre}
                    td #{book.first_published}
    script(src="javascripts/jquery/jquery-3.2.1.js")
    script(src="javascripts/pagination.js")
    script(src="javascripts/search.js")